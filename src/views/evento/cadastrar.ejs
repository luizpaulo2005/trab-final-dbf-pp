<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Eventos</title>
    <script>
      function redirectToSearch() {
        const input = document.getElementById("nome");
        const nome = input.value.trim();
        if (nome) {
          window.location.href = `/buscar?nome=${encodeURIComponent(
            nome
          )}`;
        } else {
          alert("Por favor, insira um valor para buscar.");
        }
      }

      window.onload = function () {
        document
          .getElementById("nome")
          .addEventListener("keypress", function (event) {
            if (event.key === "Enter") {
              event.preventDefault();
              redirectToSearch();
            }
          });
      };
    </script>
  </head>
  <body class="min-h-screen min-w-screen p-2">
    <div class="border rounded-md p-2 flex items-center justify-between">
      <a href="/" class="text-xl font-semibold">Eventos</a>
      <div class="flex items-center gap-2">
        <a href="/categoria">Categorias</a>
        <a href="/cliente">Clientes</a>
        <a href="/local">Locais</a>
        <a href="/participante">Participantes</a>
      </div>
      <div class="flex items-center gap-2">
        <a
          href="/cadastrar"
          class="bg-zinc-700 text-zinc-50 px-2.5 py-1.5 rounded-md hover:bg-zinc-600 transition-colors"
        >
          Criar
        </a>
        <div class="border px-2 py-1 rounded-md flex items-center gap-2">
          <input
            class="focus:outline-none"
            type="text"
            name="nome"
            id="nome"
            placeholder="Digite alguma coisa..."
          />
          <img
            class="hover:cursor-pointer"
            src="/search.png"
            onclick="redirectToSearch()"
          />
        </div>
        <button
          class="bg-zinc-700 text-zinc-50 px-2.5 py-1.5 rounded-md hover:bg-zinc-600 transition-colors"
        >
          Entrar
        </button>
      </div>
    </div>
    <div
      class="h-[calc(100vh-5rem)] w-full flex items-center justify-center text-center"
    >
      <form
        action="/"
        method="post"
        class="flex flex-col items-center gap-2"
      >
        <input
          type="text"
          name="nome"
          id="nome"
          placeholder="Digite o nome"
          required
          class="border rounded px-2.5 py-1.5 outline-none"
        />
        <input
          type="text"
          name="descricao"
          id="descricao"
          placeholder="Digite a descricao"
          required
          class="border rounded px-2.5 py-1.5 outline-none"
        />
        <input
          type="text"
          name="endereco"
          id="endereco"
          placeholder="Digite o endereco"
          required
          class="border rounded px-2.5 py-1.5 outline-none"
        />
        <input
          type="date"
          name="inicio"
          id="inicio"
          placeholder="Digite a data de inicio"
          required
          class="border rounded px-2.5 py-1.5 outline-none w-full bg-transparent"
        />
        <input
          type="date"
          name="fim"
          id="fim"
          placeholder="Digite a data de fim"
          required
          class="border rounded px-2.5 py-1.5 outline-none w-full bg-transparent"
        />
        <select
          name="idCategoria"
          id="idCategoria"
          required
          class="border rounded px-2.5 py-1.5 outline-none w-full bg-transparent"
        >
          <option value="" disabled selected>Selecione uma categoria</option>
          <% categorias.forEach((categoria) => {%>
          <option value="<%=categoria.id%>"><%=categoria.tipo%></option>
          <%})%>
        </select>
        <select
          name="idLocal"
          id="idLocal"
          required
          class="border rounded px-2.5 py-1.5 outline-none w-full bg-transparent"
        >
          <option value="" disabled selected>Selecione um local</option>
          <% locais.forEach((local) => {%>
          <option value="<%=local.id%>">
            <%=local.cidade%> - <%=local.estado%>
          </option>
          <%})%>
        </select>
        <select
          name="idUsuario"
          id="idUsuario"
          required
          class="border rounded px-2.5 py-1.5 outline-none w-full bg-transparent"
        >
          <option value="" disabled selected>Selecione um usu√°rio</option>
          <% usuarios.forEach((usuario) => {%>
          <option value="<%=usuario.id%>"><%=usuario.nome%></option>
          <%})%>
        </select>
        <button
          type="submit"
          class="bg-zinc-700 text-zinc-50 px-2.5 py-1.5 rounded-md hover:bg-zinc-600 transition-colors w-full"
        >
          Cadastrar
        </button>
      </form>
    </div>
    <script src="https://unpkg.com/@tailwindcss/browser@4" defer></script>
  </body>
</html>
